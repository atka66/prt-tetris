<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="240.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.unideb.inf.prt.tetris.view.controllers.GameOverController">
   <children>
      <Button fx:id="buttonSave" layoutX="110.0" layoutY="161.0" mnemonicParsing="false" onAction="#handleButtonSave" text="Save to database" />
      <Label layoutX="73.0" layoutY="24.0" text="GAME OVER">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <Label layoutX="73.0" layoutY="84.0" text="Your final score:" />
      <Label fx:id="labelScore" layoutX="163.0" layoutY="79.0" text="SCORE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="textFieldPlayer" layoutX="141.0" layoutY="120.0" prefHeight="25.0" prefWidth="120.0" promptText="Player" />
      <Label layoutX="73.0" layoutY="124.0" text="Your name:" />
      <Button fx:id="buttonSkip" layoutX="144.0" layoutY="194.0" mnemonicParsing="false" onAction="#handleButtonSkip" text="Skip" />
   </children>
</AnchorPane>
